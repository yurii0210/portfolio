# Dependencies: exclude installed packages and plug-and-play files
/node_modules
/.pnp
.pnp.js

# Testing: exclude test coverage reports
/coverage

# Production: exclude the optimized production build folder
/build

# Environment Variables: exclude sensitive local environment files
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# Logs: exclude debug and error logs from npm and yarn
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# System Files: exclude OS-specific files (e.g., macOS metadata)
.DS_Store
Thumbs.db

# Docker: exclude Docker-specific configuration and local container logs
.dockerignore
# Prevents container logs from being committed if generated in the project root
npm-debug.log*

# IDE/Editor: exclude local workspace settings (VS Code, WebStorm, etc.)
.vscode/
.idea/
*.swp
*.swo